            <p class="code-line indent">
              <span class="id">Name</span>
              <span class="type">string</span>
            </p>
            <p class="code-line indent">
              <span class="id">Title</span>
              <span class="type">string</span>
            </p>
            <p class="code-line indent">
              <span class="id">Email</span>
              <span class="type">string</span>
            </p>
            <p class="code-line indent">
              <span class="id">Phone</span>
              <span class="type">string</span>
            </p>
