---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/index-page/hero/Hero.astro";
import Timeline from "../components/index-page/timeline/Timeline.astro";

const pageTitle = "Home";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="index-theme-legacy">
    <!-- Hero Component -->
    <Hero />

    <!--<div class="w-full h-0.5 bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>-->
    <!--&lt;!&ndash; Project Carousel &ndash;&gt;-->
    <!--<Project />-->

    <div class="w-full h-0.5 bg-linear-to-r from-transparent via-gray-300 to-transparent"></div>
    <!-- The Development Timeline -->
    <Timeline />
  </div>

  <style is:global>
    html[data-theme="light"] .index-theme-legacy {
      --app-bg: #f2f1ee;
      --app-surface: #ffffff;
      --app-surface-2: #f3f4f6;
      --app-text: #111827;
      --app-text-muted: #4b5563;
      --app-border: #d1d5db;
      --app-accent: #2e9cca;
      --app-accent-hover: #3a7a8f;
      --app-accent-soft: #dcedf3;
      --app-accent-contrast: #f8fbff;
      --app-focus: #6ba0b3;
    }

    html[data-theme="dark"] .index-theme-legacy {
      --app-bg: #0f141a;
      --app-surface: #161d24;
      --app-surface-2: #1b2430;
      --app-text: #e6edf5;
      --app-text-muted: #aeb8c5;
      --app-border: #2d3a4b;
      --app-accent: #67b6d8;
      --app-accent-hover: #7cc4e2;
      --app-accent-soft: #233645;
      --app-accent-contrast: #07131b;
      --app-focus: #8acde7;
    }

    .index-theme-legacy {
      color: var(--app-text);
    }
  </style>
</BaseLayout>
