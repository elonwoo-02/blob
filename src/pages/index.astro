---
import BaseLayout from '../layouts/BaseLayout.astro';
import TimelineSection from '../components/timeline/TimelineSection.astro';
import { indexTimeline, aboutTimeline, blogTimeline, bookmarksTimeline, baseLayoutTimeline, markdownPostLayoutTimeline, androidTimeline } from "../data/developmentTimeline.ts";

const pageTitle = "";

const statusCards = [
  {
    label: "节点在线",
    value: "24/24",
    hint: "心跳稳定",
  },
  {
    label: "运行时延",
    value: "18ms",
    hint: "低延迟链路",
  },
  {
    label: "加密等级",
    value: "AES-256",
    hint: "全域加固",
  },
];
---
<BaseLayout pageTitle={pageTitle}>
  <section class="relative overflow-hidden rounded-3xl border border-emerald-500/30 bg-black/80 p-8 text-slate-100 shadow-[0_0_40px_rgba(16,185,129,0.15)]">
    <div class="pointer-events-none absolute inset-0 bg-[radial-gradient(circle_at_top,#10b9811a,transparent_60%)]"></div>
    <div class="relative grid gap-10 lg:grid-cols-[1.2fr_0.8fr]">
      <div>
        <div class="mb-4 inline-flex items-center gap-2 rounded-full border border-emerald-500/40 bg-emerald-500/10 px-4 py-1 text-xs font-mono uppercase tracking-[0.25em] text-emerald-300">
          <span class="h-2 w-2 rounded-full bg-emerald-400 shadow-[0_0_10px_rgba(16,185,129,0.8)]"></span>
          系统已上线
        </div>
        <h2 class="text-3xl font-bold text-emerald-200 md:text-4xl">Hola, soy!</h2>
        <p class="mt-4 max-w-xl text-sm leading-relaxed text-slate-300 md:text-base">
          这里是你的主控终端：集中展示数据流、任务进度与关键指令。将内容组织成高对比度的终端面板，让每一次操作都像在执行深夜渗透任务。
        </p>
        <div class="mt-8 grid gap-4 sm:grid-cols-3">
          {statusCards.map((card) => (
            <div class="rounded-2xl border border-emerald-500/30 bg-black/60 p-4">
              <p class="text-xs font-mono uppercase tracking-widest text-emerald-400">
                {card.label}
              </p>
              <p class="mt-2 text-2xl font-semibold text-emerald-100">{card.value}</p>
              <p class="mt-1 text-xs text-slate-400">{card.hint}</p>
            </div>
          ))}
        </div>
      </div>
      <div class="rounded-2xl border border-emerald-500/30 bg-black/70 p-6 font-mono text-sm text-emerald-200 shadow-[inset_0_0_20px_rgba(16,185,129,0.2)]">
        <div class="flex items-center gap-2 text-xs text-emerald-400">
          <span class="h-2 w-2 rounded-full bg-emerald-400"></span>
          terminal@elblog:~$ status
        </div>
        <pre class="mt-4 whitespace-pre-wrap leading-relaxed text-emerald-200">
[init] 连接中...
[ok]   核心服务已激活
[ok]   防火墙规则已加载
[ok]   日志流已同步
[info] 下一次扫描: 04:00
        </pre>
        <div class="mt-4 border-t border-emerald-500/20 pt-4 text-xs text-emerald-400">
          输入 <span class="text-emerald-200">help</span> 获取更多指令
        </div>
      </div>
    </div>
  </section>

  <TimelineSection entries={androidTimeline} title="Android log" subtitle="" tagLabel="" />
  <TimelineSection entries={baseLayoutTimeline} title="BaseLayout log" subtitle="" tagLabel="" />
  <TimelineSection entries={markdownPostLayoutTimeline} title="MarkdownpostLayout log" subtitle="" tagLabel="" />
  <TimelineSection entries={indexTimeline} title="Index log" subtitle="" tagLabel="" />
  <TimelineSection entries={aboutTimeline} title="About log" subtitle="" tagLabel="" />
  <TimelineSection entries={blogTimeline} title="Blog log" subtitle="" tagLabel="" />
  <TimelineSection entries={bookmarksTimeline} title="Bookmarks log" subtitle="" tagLabel="" />
</BaseLayout>
