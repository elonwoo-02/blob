---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/post/BlogPost.astro';
import { getTagPathsFromPosts, getPostsByTagPath, tagToSlug } from '../../utils/tags';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const tagPaths = getTagPathsFromPosts(allPosts);

  return tagPaths.map((tagPath) => ({
    params: { tag: tagToSlug(tagPath) },
    props: {
      tagPath,
      posts: getPostsByTagPath(allPosts, tagPath),
    },
  }));
}

const { tagPath, posts } = Astro.props;
---

<BaseLayout pageTitle={tagPath}>
  <p>包含「{tagPath}」标签的文章</p>
  <ul>
    {posts.map((post) => <BlogPost url={`/posts/${post.id}/`} title={post.data.title} />)}
  </ul>
</BaseLayout>
