---
import BaseLayout from './BaseLayout.astro';
import SectionNavNode from '../components/SectionNavNode.astro';

const { frontmatter, headings } = Astro.props as {
  frontmatter: {
    title: string;
    pubDate: Date;
    description: string;
    author: string;
    image?: {
      url: string;
      alt: string;
    };
    tags?: string[];
  };
  headings?: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
};

type HeadingItem = {
  depth: number;
  slug: string;
  text: string;
};

type HeadingNode = HeadingItem & {
  children: HeadingNode[];
};

const sectionHeadings: HeadingItem[] = (headings ?? []).filter(
  (heading) => heading.depth >= 2 && heading.depth <= 4
);

const buildHeadingTree = (items: HeadingItem[]) => {
  const roots: HeadingNode[] = [];
  const stack: HeadingNode[] = [];

  items.forEach((item) => {
    const node: HeadingNode = { ...item, children: [] };

    while (stack.length > 0 && stack[stack.length - 1].depth >= node.depth) {
      stack.pop();
    }

    if (stack.length === 0) {
      roots.push(node);
    } else {
      stack[stack.length - 1].children.push(node);
    }

    stack.push(node);
  });

  return roots;
};

const headingTree = buildHeadingTree(sectionHeadings);
---

<BaseLayout pageTitle={frontmatter.title}>
  <article class="post-layout">
    <div class="drawer drawer-end lg:drawer-open post-drawer" id="post-drawer-layout">
      <input id="section-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        <div class="post-shell">
          <main class="post-content">
            <div class="post-toolbar">
              <label for="section-drawer" class="btn btn-ghost btn-sm px-2 lg:hidden" aria-label="打开章节导航">
                <svg viewBox="0 0 24 24" aria-hidden="true" class="h-4 w-4">
                  <path fill="currentColor" d="M4 6.75c0-.41.34-.75.75-.75h14.5c.41 0 .75.34.75.75s-.34.75-.75.75H4.75A.75.75 0 0 1 4 6.75zm0 5.25c0-.41.34-.75.75-.75h9.5c.41 0 .75.34.75.75s-.34.75-.75.75h-9.5A.75.75 0 0 1 4 12zm0 5.25c0-.41.34-.75.75-.75h14.5c.41 0 .75.34.75.75s-.34.75-.75.75H4.75A.75.75 0 0 1 4 17.25z"/>
                </svg>
                章节导航
              </label>
            </div>
        <div class="post-meta">
          <p class="publish-date">{frontmatter.pubDate.toLocaleDateString()}</p>
          <p class="description"><em>{frontmatter.description}</em></p>
          <p class="author">Written by: {frontmatter.author}</p>
        </div>
        {frontmatter.image?.url && (
          <img class="hero-image" src={frontmatter.image.url} width="300" alt={frontmatter.image.alt || ''} />
        )}

        <div class="tags">
          {(frontmatter.tags ?? []).map((tag: string) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
          ))}
        </div>

        <div class="markdown-body">
          <slot />
        </div>
          </main>
        </div>
      </div>
      {headingTree.length > 0 && (
        <div class="drawer-side z-20 post-drawer-side">
          <label for="section-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
          <aside class="section-nav">
            <div class="section-nav-card">
              <div class="section-nav-header">
                <h2 class="section-nav-title">章节导航</h2>
                <p class="section-nav-subtitle">阅读进度</p>
              </div>
              <ul class="section-nav-list">
                {headingTree.map((heading) => (
                  <SectionNavNode node={heading} />
                ))}
              </ul>
            </div>
          </aside>
        </div>
      )}
    </div>
  </article>
</BaseLayout>

<script is:inline>
  const sectionLinks = Array.from(document.querySelectorAll('[data-section-link]'));
  const sectionTargets = sectionLinks
    .map((link) => document.getElementById(link.getAttribute('data-section-id') || ''))
    .filter(Boolean);

  const setActiveSection = (activeId) => {
    sectionLinks.forEach((link) => {
      const linkId = link.getAttribute('data-section-id');
      link.classList.toggle('is-active', Boolean(activeId) && linkId === activeId);
    });
  };

  if (sectionTargets.length > 0 && sectionLinks.length > 0) {
    const observer = new IntersectionObserver(
      (entries) => {
        const visible = entries.filter((entry) => entry.isIntersecting);
        if (visible.length === 0) return;
        const topmost = visible.sort((a, b) => b.intersectionRatio - a.intersectionRatio)[0];
        setActiveSection(topmost.target.id);
      },
      {
        rootMargin: '-20% 0px -65% 0px',
        threshold: [0, 0.1, 0.4, 0.8]
      }
    );

    sectionTargets.forEach((target) => observer.observe(target));
  }
</script>

<style>
  .post-layout {
    display: block;
    min-width: 0;
  }

  .post-shell {
    display: block;
  }

  .post-content {
    min-width: 0;
  }

  .post-toolbar {
    margin-bottom: 1rem;
  }

  .post-meta {
    margin-bottom: 1rem;
    color: color-mix(in oklab, var(--color-base-content) 75%, transparent);
    font-size: 0.95rem;
  }

  .post-meta p {
    margin: 0.2rem 0;
  }

  .description {
    font-size: 1rem;
  }

  .hero-image {
    border-radius: 0.85rem;
    border: 0;
    margin: 0.5rem 0 1rem;
    max-width: 100%;
    height: auto;
  }

  .markdown-body :global(h1),
  .markdown-body :global(h2),
  .markdown-body :global(h3),
  .markdown-body :global(h4) {
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    line-height: 1.25;
    font-weight: 700;
  }

  .markdown-body :global(h1) {
    font-size: clamp(1.8rem, 3vw, 2.2rem);
    border-bottom: 0;
    padding-bottom: 0.25em;
  }

  .tags .tag {
    border: 0;
  }

  .markdown-body :global(h2) {
    font-size: clamp(1.4rem, 2.2vw, 1.7rem);
  }

  .markdown-body :global(h3) {
    font-size: clamp(1.2rem, 2vw, 1.4rem);
  }

