    gap: 0.75rem;
    margin-bottom: 0.35rem;
    flex-wrap: wrap;
  }

  .reading-time {
    font-size: 0.85rem;
    color: color-mix(in oklab, var(--color-base-content) 70%, transparent);
  }

  .post-action-btn {
    align-items: center;
    background: transparent;
    border: 1px solid transparent;
    border-radius: 999px;
    color: hsl(var(--bc));
    cursor: pointer;
    display: inline-flex;
    font-size: 0.78rem;
    font-weight: 600;
    gap: 0.35rem;
    padding: 0.35rem 0.6rem;
    transition: transform 0.2s ease, border-color 0.2s ease, background 0.2s ease, color 0.2s ease;
  }

  .post-action-btn:hover {
    border-color: hsl(var(--bc) / 0.18);
    background: hsl(var(--b2));
    transform: translateY(-1px);
  }

  .post-action-btn.is-active {
    color: hsl(var(--p));
    border-color: transparent;
    background: hsl(var(--p) / 0.08);
  }

  .post-action-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .post-avatar {
    width: 1.8rem;
    height: 1.8rem;
    border-radius: 999px;
    background: hsl(var(--n));
    color: hsl(var(--nc));
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    overflow: hidden;
  }

  .post-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .post-meta p {
    margin: 0.2rem 0;
  }

  .post-meta-row p {
    margin: 0;
  }

  .description {
    font-size: 1rem;
  }

  .hero-image {
    border-radius: 0.85rem;
    border: 0;
    margin: 0.5rem 0 1rem;
    max-width: 100%;
    height: auto;
  }


  .markdown-body :global(h1),
  .markdown-body :global(h2),
  .markdown-body :global(h3),
  .markdown-body :global(h4) {
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    line-height: 1.25;
    font-weight: 700;
  }

  .markdown-body :global(h1) {
    font-size: clamp(1.8rem, 3vw, 2.2rem);
    border-bottom: 0;
    padding-bottom: 0.25em;
    display: none;
  }

  .tags .tag {
    border: 0;
  }

  .markdown-body :global(h2) {
    font-size: clamp(1.4rem, 2.2vw, 1.7rem);
  }

  .markdown-body :global(h3) {
    font-size: clamp(1.2rem, 2vw, 1.4rem);
  }

  .markdown-body :global(p),
  .markdown-body :global(li) {
    font-size: 1rem;
    line-height: 1.8;
  }

  .markdown-body :global(ul),
  .markdown-body :global(ol) {
    margin: 0.8rem 0 1rem;
    padding-left: 1.35rem;
  }

  .markdown-body :global(code) {
    background: color-mix(in oklab, var(--color-base-content) 12%, transparent);
    border-radius: 0.35rem;
    padding: 0.1rem 0.35rem;
    font-size: 0.92em;
  }

  .markdown-body :global(pre) {
    padding: 1rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    background: color-mix(in oklab, var(--color-base-content) 8%, transparent);
  }

  .markdown-body :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .markdown-body :global(blockquote) {
    margin: 1rem 0;
    padding: 0.75rem 1rem;
    border-left: 4px solid color-mix(in oklab, var(--color-primary) 65%, white);
    background: color-mix(in oklab, var(--color-primary) 12%, transparent);
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
  }

  .tag {
    margin: 0;
    border: 1px solid hsl(var(--bc) / 0.2);
    border-radius: 0.75rem;
    padding: 0.45rem 0.8rem;
    font-size: 1rem;
    background-color: transparent;
  }

  .section-nav-btn:hover {
    color: #059669;
  }

  @media (min-width: 1024px) {
    .post-drawer .drawer-side > *:not(.drawer-overlay) {
      transition: width 0.2s ease;
    }

    .post-sidebar-collapsed .post-drawer-side aside {
      width: 3.5rem;
      padding-left: 0.5rem;
      padding-right: 0.5rem;
      overflow: hidden;
    }

    .post-sidebar-collapsed .post-drawer-side h2,
    .post-sidebar-collapsed .post-drawer-side #section-tree,
    .post-sidebar-collapsed .post-drawer-side p {
      display: none;
    }
  }
</style>
