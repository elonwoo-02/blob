    font-size: 1rem;
    line-height: 1.8;
  }

  .markdown-body :global(ul),
  .markdown-body :global(ol) {
    margin: 0.8rem 0 1rem;
    padding-left: 1.35rem;
  }

  .markdown-body :global(code) {
    background: color-mix(in oklab, var(--color-base-content) 12%, transparent);
    border-radius: 0.35rem;
    padding: 0.1rem 0.35rem;
    font-size: 0.92em;
  }

  .markdown-body :global(pre) {
    padding: 1rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    background: color-mix(in oklab, var(--color-base-content) 8%, transparent);
  }

  .markdown-body :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .markdown-body :global(blockquote) {
    margin: 1rem 0;
    padding: 0.75rem 1rem;
    border-left: 4px solid color-mix(in oklab, var(--color-primary) 65%, white);
    background: color-mix(in oklab, var(--color-primary) 12%, transparent);
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    margin: 0;
    border: 1px solid hsl(var(--bc) / 0.2);
    border-radius: 0.75rem;
    padding: 0.45rem 0.8rem;
    font-size: 1rem;
    background-color: transparent;
  }

  .section-nav {
    position: sticky;
    top: 1.5rem;
    align-self: start;
    width: min(18rem, 80vw);
  }

  .section-nav-card {
    border-radius: 1.25rem;
    border: 1px solid hsl(var(--bc) / 0.15);
    background: hsl(var(--b1));
    padding: 1.25rem;
    box-shadow: 0 15px 30px hsl(var(--bc) / 0.08);
  }

  .section-nav-header {
    margin-bottom: 1rem;
  }

  .section-nav-title {
    margin: 0;
    font-size: 1.05rem;
    font-weight: 700;
  }

  .section-nav-subtitle {
    margin: 0.25rem 0 0;
    font-size: 0.85rem;
    color: color-mix(in oklab, var(--color-base-content) 65%, transparent);
  }

  .section-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }

  .section-nav-item {
    border-radius: 0.85rem;
    border: 1px solid hsl(var(--bc) / 0.15);
    padding: 0.55rem 0.85rem;
    transition: border-color 0.2s ease, background-color 0.2s ease;
  }

  .section-nav-link {
    color: inherit;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    display: block;
  }

  .section-nav-item .section-nav-list {
    margin-top: 0.65rem;
    gap: 0.6rem;
  }

  .section-nav-item {
    padding-left: calc(0.85rem + (var(--depth, 0) * 0.75rem));
    border-style: solid;
  }

  .section-nav-item[data-depth='1'],
  .section-nav-item[data-depth='2'] {
    border-style: dashed;
  }

  .section-nav-link:hover {
    color: #059669;
  }

  .section-nav-link.is-active {
    color: #059669;
    background: rgba(5, 150, 105, 0.16);
    border-radius: 999px;
    padding: 0.2rem 0.5rem;
    display: inline-flex;
  }

  .section-nav-item:hover {
    border-color: hsl(var(--bc) / 0.3);
    background-color: hsl(var(--bc) / 0.04);
  }

  @media (max-width: 1024px) {
    .section-nav {
      position: static;
    }
  }
</style>
