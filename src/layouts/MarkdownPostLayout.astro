---
import BaseLayout from './BaseLayout.astro';
import SectionTreeNode from '../components/SectionTreeNode.astro';

const { frontmatter, headings = [], readingTime = 1, postId = '' } = Astro.props as {
  frontmatter: {
    title: string;
    pubDate: Date;
    description: string;
    author: string;
    image?: {
      url: string;
      alt: string;
    };
    tags?: string[];
  };
  headings?: Array<{ depth: number; slug: string; text: string }>;
  readingTime?: number;
  postId?: string;
};

type SectionNode = {
  depth: number;
  slug: string;
  text: string;
  children: SectionNode[];
};

const sectionHeadings = headings.filter((heading) => heading.depth >= 1 && heading.depth <= 4);

const buildSectionTree = (items: typeof sectionHeadings) => {
  const root: SectionNode[] = [];
  const stack: SectionNode[] = [];

  items.forEach((item) => {
    const node: SectionNode = { ...item, children: [] };
    while (stack.length > 0 && stack[stack.length - 1].depth >= node.depth) {
      stack.pop();
    }
    if (stack.length === 0) {
      root.push(node);
    } else {
      stack[stack.length - 1].children.push(node);
    }
    stack.push(node);
  });

  return root;
};

const sectionTree = buildSectionTree(sectionHeadings);
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="post-progress" aria-hidden="true">
    <span id="reading-progress"></span>
  </div>
  <div class="drawer drawer-end lg:drawer-open post-drawer" id="post-drawer-layout">
    <input id="section-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content">
      <article class="post-layout">
        <main class="post-content">
          <div class="post-header-row">
            <div class="lg:hidden">
              <label for="section-drawer" class="btn btn-ghost btn-sm px-2" aria-label="打开章节导航">
                <svg viewBox="0 0 24 24" aria-hidden="true" class="h-4 w-4">
                  <path fill="currentColor" d="M4 6.75c0-.41.34-.75.75-.75h14.5c.41 0 .75.34.75.75s-.34.75-.75.75H4.75A.75.75 0 0 1 4 6.75zm0 5.25c0-.41.34-.75.75-.75h9.5c.41 0 .75.34.75.75s-.34.75-.75.75h-9.5A.75.75 0 0 1 4 12zm0 5.25c0-.41.34-.75.75-.75h14.5c.41 0 .75.34.75.75s-.34.75-.75.75H4.75A.75.75 0 0 1 4 17.25z"/>
                </svg>
              </label>
            </div>
          </div>
          <div class="post-meta">
            <div class="post-meta-row">
              <div class="post-avatar">
                <img src="/avatars/default.png" alt={`${frontmatter.author} avatar`} width="36" height="36" loading="lazy" />
              </div>
              <p class="author">{frontmatter.author}</p>
              <p class="publish-date">{frontmatter.pubDate.toLocaleDateString()}</p>
              <p class="reading-time">{readingTime} min read</p>
              <button
                id="post-like-btn"
                class="post-action-btn"
                type="button"
                data-post-id={postId || Astro.url.pathname}
                data-post-title={frontmatter.title}
                data-post-url={Astro.url.pathname}
                data-post-desc={frontmatter.description}
                data-post-date={frontmatter.pubDate.toISOString()}
                aria-pressed="false"
              >
                <span class="post-action-icon" aria-hidden="true">❤</span>
                <span class="post-action-label">Like</span>
              </button>
            </div>
            <p class="description"><em>{frontmatter.description}</em></p>
          </div>
          {frontmatter.image?.url && (
            <img class="hero-image" src={frontmatter.image.url} width="300" alt={frontmatter.image.alt || ''} />
          )}

          <div class="tags">
            {(frontmatter.tags ?? []).map((tag: string) => (
              <p class="tag"><a href={`/tags/${tag}`}>#{tag}</a></p>
            ))}
          </div>

          <div class="markdown-body">
            <slot />
          </div>
        </main>
      </article>
    </div>
    <div class="drawer-side z-20 post-drawer-side">
      <label for="section-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
      <aside class="min-h-full w-80 rounded-l-3xl border-l border-base-300 bg-base-100 p-5 shadow-sm lg:rounded-3xl lg:border lg:shadow-sm">
        <br>
        <br>
        <div class="mb-4 flex items-center justify-between">
          <h2 class="text-lg font-semibold">Menu</h2>
          <button id="toggle-section-sidebar" class="btn btn-ghost btn-xs hidden lg:inline-flex" type="button" aria-label="收起章节导航">
            ⇤
          </button>
        </div>
        {sectionTree.length > 0 ? (
          <ul id="section-tree" class="space-y-2">
            {sectionTree.map((section) => <SectionTreeNode node={section} />)}
          </ul>
        ) : (
          <p class="text-sm text-base-content/60">暂无章节。</p>
        )}
      </aside>
    </div>
  </div>

  <script is:inline>
    const drawerLayout = document.getElementById('post-drawer-layout');
    const sidebarToggle = document.getElementById('toggle-section-sidebar');

    document.querySelectorAll('.section-toggle').forEach((toggleButton) => {
      toggleButton.addEventListener('click', () => {
        const listItem = toggleButton.closest('li');
        const children = listItem?.querySelector(':scope > .section-children');
        if (!children) return;

        const expanded = toggleButton.getAttribute('data-expanded') !== 'false';
        const nextExpanded = !expanded;
        toggleButton.setAttribute('data-expanded', `${nextExpanded}`);
        toggleButton.setAttribute('aria-expanded', `${nextExpanded}`);
        toggleButton.textContent = nextExpanded ? '▾' : '▸';
        children.classList.toggle('hidden', !nextExpanded);
      });
    });

    if (sidebarToggle && drawerLayout) {
      sidebarToggle.addEventListener('click', () => {
        const collapsed = drawerLayout.classList.toggle('post-sidebar-collapsed');
        sidebarToggle.textContent = collapsed ? '⇥' : '⇤';
      });
    }
    const progressBar = document.getElementById('reading-progress');
    const updateProgress = () => {
      if (!progressBar) return;
      const total = document.documentElement.scrollHeight - window.innerHeight;
      const percent = total > 0 ? Math.min(1, window.scrollY / total) : 0;
      progressBar.style.width = `${percent * 100}%`;
    };
    updateProgress();
    window.addEventListener('scroll', updateProgress, { passive: true });
    window.addEventListener('resize', updateProgress);

    const likeButton = document.getElementById('post-like-btn');
    if (likeButton) {
      const postId = likeButton.getAttribute('data-post-id') || '';
      const likeKey = `blog:action:like:${postId}`;
      const bookmarkKey = 'blog:bookmarks';
      const readBookmarks = () => JSON.parse(localStorage.getItem(bookmarkKey) || '[]');
      const writeBookmarks = (items) =>
        localStorage.setItem(bookmarkKey, JSON.stringify(items.slice(-200)));

      const getPayload = () => ({
        slug: postId,
        title: likeButton.getAttribute('data-post-title') || '',
        url: likeButton.getAttribute('data-post-url') || '',
        description: likeButton.getAttribute('data-post-desc') || '',
        date: likeButton.getAttribute('data-post-date') || '',
      });

      const syncState = () => {
        const liked = localStorage.getItem(likeKey) === '1';
        likeButton.classList.toggle('is-active', liked);
        likeButton.setAttribute('aria-pressed', `${liked}`);
        likeButton.querySelector('.post-action-label').textContent = liked ? 'Liked' : 'Like';
        if (liked) {
          const list = readBookmarks();
          const payload = getPayload();
          if (!list.some((item) => item.slug === payload.slug)) {
            list.push(payload);
            writeBookmarks(list);
          }
        }
      };

      likeButton.addEventListener('click', () => {
        if (!postId) return;
        const liked = localStorage.getItem(likeKey) === '1';
        const next = !liked;
        localStorage.setItem(likeKey, next ? '1' : '0');
        const list = readBookmarks();
        const payload = getPayload();
        if (next) {
          if (!list.some((item) => item.slug === payload.slug)) {
            list.push(payload);
          }
          writeBookmarks(list);
        } else {
          const filtered = list.filter((item) => item.slug !== payload.slug);
          writeBookmarks(filtered);
        }
        syncState();
      });

      syncState();
    }
  </script>
</BaseLayout>

<style>
  .post-progress {
    position: sticky;
    top: 0;
    z-index: 20;
    height: 3px;
    width: 100%;
    background: color-mix(in oklab, var(--color-base-content) 12%, transparent);
    margin-bottom: 0.75rem;
  }

