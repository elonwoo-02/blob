---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} pageDescription={frontmatter.description}>
  <article style="display:grid; gap:1rem;">
    <p class="muted">{frontmatter.pubDate.toLocaleDateString()} Â· {frontmatter.author}</p>
    <p>{frontmatter.description}</p>
    <img src={frontmatter.image.url} alt={frontmatter.image.alt} class="panel" style="padding:0; width:min(100%, 620px);" />
    <div style="display:flex;gap:0.5rem;flex-wrap:wrap;">
      {frontmatter.tags.map((tag: string) => (
        <a class="chip" href={`/tags/${tag}`}>#{tag}</a>
      ))}
    </div>
    <div class="panel" style="background:var(--surface);">
      <slot />
    </div>
  </article>
</BaseLayout>
