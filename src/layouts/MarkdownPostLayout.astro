---
import BaseLayout from './BaseLayout.astro';

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

const { frontmatter, headings = [] } = Astro.props as {
  frontmatter: {
    title: string;
    pubDate: Date;
    description: string;
    author: string;
    image: {
      url: string;
      alt: string;
    };
    tags: string[];
  };
  headings: Heading[];
};

const navigationHeadings = headings.filter((heading) => heading.depth <= 3);
---

<BaseLayout pageTitle={frontmatter.title}>
  <article class="post-layout">
    <main class="post-content">
      <div class="post-meta">
        <p class="publish-date">{frontmatter.pubDate.toLocaleDateString()}</p>
        <p class="description"><em>{frontmatter.description}</em></p>
        <p class="author">Written by: {frontmatter.author}</p>
      </div>
      <img class="hero-image" src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

      <div class="tags">
        {frontmatter.tags.map((tag: string) => (
          <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
      </div>

      <div class="markdown-body">
        <slot />
      </div>
    </main>

    <aside class="chapter-nav" aria-label="章節導航">
      <details class="chapter-panel" open>
        <summary>章節導航</summary>
        <nav>
          <ul>
            {navigationHeadings.length > 0 ? (
              navigationHeadings.map((heading) => (
                <li class={`depth-${heading.depth}`}>
                  <a href={`#${heading.slug}`}>{heading.text}</a>
                </li>
              ))
            ) : (
              <li class="empty-state">本篇文章暫無章節</li>
            )}
          </ul>
        </nav>
      </details>
    </aside>
  </article>
</BaseLayout>

<style>
  .post-layout {
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto;
    gap: 1.5rem;
    align-items: start;
  }

  .chapter-nav {
    position: sticky;
    top: 5.5rem;
    justify-self: end;
  }

  .chapter-panel {
    width: min(18rem, 28vw);
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    background: #f8fafc;
    box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
    transition: width 180ms ease;
    overflow: hidden;
  }

  .chapter-panel summary {
    cursor: pointer;
    font-weight: 600;
    margin-bottom: 0.75rem;
    white-space: nowrap;
  }

  .chapter-panel:not([open]) {
    width: 3.25rem;
    padding: 0.75rem;
  }

  .chapter-panel:not([open]) summary {
    margin-bottom: 0;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    letter-spacing: 0.05em;
  }

  .chapter-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .chapter-nav li + li {
    margin-top: 0.4rem;
  }

  .chapter-nav a {
    color: #0369a1;
    text-decoration: none;
  }

  .chapter-nav a:hover {
    text-decoration: underline;
  }

  .chapter-nav .depth-3 {
    padding-left: 1rem;
  }

  .chapter-nav .empty-state {
    color: #6b7280;
    font-size: 0.95rem;
  }

  .post-content {
    min-width: 0;
  }

  .post-meta {
    margin-bottom: 1rem;
    color: color-mix(in oklab, var(--color-base-content) 75%, transparent);
    font-size: 0.95rem;
  }

  .post-meta p {
    margin: 0.2rem 0;
  }

  .description {
    font-size: 1rem;
  }

  .hero-image {
    border-radius: 0.85rem;
    border: 1px solid color-mix(in oklab, var(--color-base-content) 15%, transparent);
    margin: 0.5rem 0 1rem;
    max-width: 100%;
    height: auto;
  }

  .markdown-body :global(h1),
  .markdown-body :global(h2),
  .markdown-body :global(h3),
  .markdown-body :global(h4) {
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    line-height: 1.25;
    font-weight: 700;
  }

  .markdown-body :global(h1) {
    font-size: clamp(1.8rem, 3vw, 2.2rem);
    border-bottom: 1px solid color-mix(in oklab, var(--color-base-content) 18%, transparent);
    padding-bottom: 0.25em;
  }

  .markdown-body :global(h2) {
    font-size: clamp(1.4rem, 2.2vw, 1.7rem);
  }

  .markdown-body :global(h3) {
    font-size: clamp(1.2rem, 2vw, 1.4rem);
  }

  .markdown-body :global(p),
  .markdown-body :global(li) {
    font-size: 1rem;
    line-height: 1.8;
  }

  .markdown-body :global(ul),
  .markdown-body :global(ol) {
    margin: 0.8rem 0 1rem;
    padding-left: 1.35rem;
  }

  .markdown-body :global(code) {
    background: color-mix(in oklab, var(--color-base-content) 12%, transparent);
    border-radius: 0.35rem;
    padding: 0.1rem 0.35rem;
    font-size: 0.92em;
  }

  .markdown-body :global(pre) {
    padding: 1rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    background: color-mix(in oklab, var(--color-base-content) 8%, transparent);
  }

  .markdown-body :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .markdown-body :global(blockquote) {
    margin: 1rem 0;
    padding: 0.75rem 1rem;
    border-left: 4px solid color-mix(in oklab, var(--color-primary) 65%, white);
    background: color-mix(in oklab, var(--color-primary) 12%, transparent);
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    margin: 0;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.4em 0.85em;
    font-size: 1rem;
    background-color: #f8fcfd;
  }

  @media (max-width: 900px) {
    .post-layout {
      grid-template-columns: 1fr;
    }

    .chapter-nav {
      position: static;
      width: 100%;
    }

    .chapter-panel,
    .chapter-panel:not([open]) {
      width: 100%;
      padding: 0.75rem 1rem;
    }

    .chapter-panel:not([open]) summary {
      writing-mode: horizontal-tb;
      margin-bottom: 0;
    }
  }
</style>
