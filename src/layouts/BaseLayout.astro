---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Dock from '../components/Dock.astro';
import '../styles/global.css';

const { pageTitle } = Astro.props;

// 配置 Dock 导航数据
const leftNav = [
  { title: '首页', link: '/' },
  { title: '博客', link: '/blog' },
  { title: '关于', link: '/about' }
];

const rightApps = [
  { title: '文章: 快速开始', link: '/blog/post-1' },
  { title: 'GitHub', link: 'https://github.com/elonwoo-02/blob' }
];
---
<html lang="zh-CN">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>{pageTitle}</title>
</head>
<body class="min-h-screen bg-base-100 text-base-content pb-24">
  <Header />
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">{pageTitle}</h1>
    <slot />
  </main>
  <Footer />
  
  <!-- Dock 导航组件 -->
  <Dock {leftNav} {rightApps} />

  <script>
    import "../scripts/menu.js";
  </script>
</body>
</html>
