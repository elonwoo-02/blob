---
const { title, url, description, date } = Astro.props;
---

<li class="panel">
  <a href={url} class="link-accent">{title}</a>
  {description && <p class="muted" style="margin-top:0.5rem;">{description}</p>}
  {date && <p class="muted" style="margin-top:0.4rem;font-size:0.9rem;">{date}</p>}
</li>
