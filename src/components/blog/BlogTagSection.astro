---
// BlogTagSection.astro - Blog tag tree for sidebar
import TagTreeNode from '../post/TagTreeNode.astro';

const { tagTree } = Astro.props;
---

<div class="tag-section p-4">
  <h3 class="text-sm font-semibold mb-3 text-base-content/70">标签</h3>
  <ul id="tag-tree" class="space-y-2">
    {tagTree.map((tag) => <TagTreeNode node={tag} />)}
  </ul>
</div>
