---
import Social from './Social.astro';

type FooterLink = { label: string; href: string };
type SocialLink = { href: string; label: string; icon: 'twitter' | 'youtube' | 'facebook' };

const {
  primaryLinks = [
    { label: 'About us', href: '#' },
    { label: 'Contact', href: '#' },
    { label: 'Jobs', href: '#' },
    { label: 'Press kit', href: '#' },
  ],
  projectLink = { label: '项目推荐：AISoulmate', href: '' },
  socialLinks,
} = Astro.props as {
  primaryLinks?: FooterLink[];
  projectLink?: FooterLink;
  socialLinks?: SocialLink[];
};
---

<footer class="w-full bg-[var(--app-bg)] border-t border-base-300 mt-16">
  <div class="timeline-container mx-auto w-full max-w-6xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="text-center space-y-8">
      <!-- Name with dot indicator -->
      <div class="flex items-center justify-center gap-3">
        <span class="h-2 w-2 rounded-full bg-[var(--app-accent)] shadow-[0_0_8px_var(--app-focus)]"></span>
        <h2 class="vcr-font text-2xl font-bold">Elon Woo</h2>
        <span class="h-2 w-2 rounded-full bg-[var(--app-accent)] shadow-[0_0_8px_var(--app-focus)]"></span>
      </div>
      
      <!-- Tagline -->
      <p class="text-sm text-base-content/60 animate-fade-in-up">
        Programmer, Editor and Student
      </p>

      <!-- Navigation links -->
      <nav class="flex flex-wrap justify-center gap-6 text-sm">
        {primaryLinks.map((item) => (
          <a 
            class="text-base-content/70 hover:text-[var(--app-accent)] transition-colors duration-300" 
            href={item.href}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Project button -->
      <div class="flex justify-center">
        <a 
          class="inline-flex items-center gap-2 px-6 py-2 rounded-full border border-[var(--app-accent)] text-sm text-[var(--app-accent)] hover:bg-[var(--app-accent)] hover:text-[var(--app-accent-contrast)] transition-all duration-300 shadow-[inset_0_0_20px_var(--app-accent-soft)]" 
          href={projectLink.href}
        >
          <span class="h-1.5 w-1.5 rounded-full bg-[var(--app-accent)]"></span>
          {projectLink.label}
        </a>
      </div>

      <!-- Social links -->
      <div class="flex justify-center">
        <Social links={socialLinks} />
      </div>

      <!-- Copyright -->
      <div class="pt-6 border-t border-base-300">
        <p class="text-xs text-base-content/50 vcr-font">
          © {new Date().getFullYear()} Elon Woo
        </p>
      </div>
    </div>
  </div>

  <style>
    @keyframes fade-in-up {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .animate-fade-in-up {
      animation: fade-in-up 0.8s ease-out forwards;
    }
  </style>
</footer>
