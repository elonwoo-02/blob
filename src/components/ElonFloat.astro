---
const { hiddenOnHome = true, path = "" } = Astro.props;
const shouldShow = hiddenOnHome ? path !== "/" : true;
---

{shouldShow && (
  <div id="elon-bot" class="elon-bot" aria-hidden="false">
    <script type="module" src="https://unpkg.com/@splinetool/viewer@1.12.51/build/spline-viewer.js" async></script><script type="module" src="https://unpkg.com/@splinetool/viewer@1.12.51/build/spline-viewer.js" async></script>
    <spline-viewer url="https://prod.spline.design/kvwKEt6NL2A6UhdP/scene.splinecode"><img src="data:image/png;base64," alt="Spline preview" style="width: 100%; height: 100%;"/></spline-viewer>
  </div>
)}

<style>
  .elon-bot {
    position: fixed;
    left: 0rem;
    bottom: 0rem;
    width: 180px;
    height: 160px;
    z-index: 65;
    background: transparent;
    border: none;
    box-shadow: none;
    transform-origin: center;
    transform-style: preserve-3d;
    perspective: 800px;
  }

  .elon-bot.is-hidden {
    display: none;
  }
</style>
