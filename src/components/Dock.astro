<script define:vars={{ hideDelay }}>
  const dock = document.getElementById('dock-container');
  const trigger = document.getElementById('dock-wrapper');
  const separator = document.getElementById('dock-separator');
  let hideTimeout;

  const showDock = () => {
    if (dock) {
      dock.style.transform = 'translateX(-50%) translateY(0)';
      dock.style.opacity = '1';
      dock.style.pointerEvents = 'auto';
      resetHideTimer();
    }
  };

  const hideDock = () => {
    if (dock) {
      dock.style.transform = 'translateX(-50%) translateY(120%)';
      dock.style.opacity = '0';
      dock.style.pointerEvents = 'none';
    }
  };

  const resetHideTimer = () => {
    clearTimeout(hideTimeout);
    hideTimeout = setTimeout(hideDock, hideDelay);
  };

  // åˆ†éš”çº¿æ‚¬åœæ•ˆæœ
  if (separator) {
    separator.addEventListener('mouseenter', () => {
      separator.style.background = 'linear-gradient(180deg, rgba(0, 132, 255, 0.6), rgba(255, 255, 255, 0.2))';
      separator.style.boxShadow = '0 0 8px rgba(0, 132, 255, 0.4)';
    });

    separator.addEventListener('mouseleave', () => {
      separator.style.background = 'rgba(255, 255, 255, 0.2)';
      separator.style.boxShadow = 'none';
    });
  }

  // åˆå§‹åŒ–
  if (dock && trigger) {
    // é¼ æ ‡è¿›å…¥ Dock åŒºåŸŸï¼Œæ˜¾ç¤ºå¹¶é‡ç½®è®¡æ—¶å™¨
    dock.addEventListener('mouseenter', () => {
      clearTimeout(hideTimeout);
      showDock();
    });

    // é¼ æ ‡ç¦»å¼€ Dock åŒºåŸŸï¼Œå¼€å§‹è®¡æ—¶éšè—
    dock.addEventListener('mouseleave', resetHideTimer);

    // é¼ æ ‡è¿›å…¥è§¦å‘åŒºåŸŸï¼ˆå±å¹•åº•éƒ¨ï¼‰ï¼Œå‘¼å‡º Dock
    trigger.addEventListener('mouseenter', showDock);
    
    // å…¨å±€é¼ æ ‡ç§»åŠ¨ç›‘æ§ï¼Œå¦‚æœé è¿‘åº•éƒ¨ä¹Ÿæ˜¾ç¤º
    document.addEventListener('mousemove', (e) => {
      if (window.innerHeight - e.clientY < 100) {
        if (dock.style.opacity !== '1') {
          showDock();
        }
      }
    });

    // åˆå§‹ 3 ç§’åè‡ªåŠ¨éšè—
    resetHideTimer();
  }
</script>

