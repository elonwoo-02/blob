---
// Dock.astro
// props:
//   leftNav: 左侧固定导航 [{title, icon, link}]
//   rightApps: 右侧动态内容 [{title, icon, link}]
const { leftNav = [], rightApps = [] } = Astro.props;
---

<div class="fixed bottom-4 left-0 w-full flex justify-center items-end z-50">
  <div class="flex items-center bg-white/70 backdrop-blur-md rounded-3xl px-4 py-2 shadow-lg">
    <!-- 左侧固定导航 -->
    <div class="flex space-x-4">
      {leftNav.map(nav => (
        <a href={nav.link} class="flex flex-col items-center justify-center p-2 rounded-xl shadow-md hover:scale-110 transition-transform duration-200">
          <img src={nav.icon} alt={nav.title} class="w-8 h-8"/>
          <span class="text-xs">{nav.title}</span>
        </a>
      ))}
    </div>

    <!-- 中间竖线 -->
    <div class="border-l border-gray-300 mx-4 h-10"></div>

    <!-- 右侧动态内容 -->
    <div class="flex space-x-4">
      {rightApps.map(app => (
        <a href={app.link} class="flex flex-col items-center justify-center p-2 rounded-xl shadow-md hover:scale-110 transition-transform duration-200">
          <img src={app.icon} alt={app.title} class="w-8 h-8"/>
          <span class="text-xs">{app.title}</span>
        </a>
      ))}
    </div>
  </div>
</div>
