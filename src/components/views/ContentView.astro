---
// ContentView.astro - Shared layout frame for Article and Moment views
import DrawerToggle from "../ui/DrawerToggle.astro";

interface Props {
  viewId: string;
  title: string;
  count?: number;
  hidden?: boolean;
  fullWidth?: boolean;
}

const {
  viewId,
  title,
  count,
  hidden = false,
  fullWidth = false,
} = Astro.props;
---

<div
  id={viewId}
  class={`view-content relative z-10 pb-20 ${hidden ? "hidden" : ""}`}
>
  <section
    class={`view-section mt-4 space-y-6 ${fullWidth ? "px-6" : ""}`}
  >
    <!-- 顶部状态栏 - 包含DrawerToggle且标题居中 -->
    <div
      class="sticky top-0 z-[60] flex items-center justify-center min-h-[4rem] px-4 py-2 bg-[#F2F1EE]/80 backdrop-blur-md border-b border-base-200/50"
    >
      <div class="absolute left-4 top-1/2 -translate-y-1/2 z-50">
        <DrawerToggle />
      </div>
      <div class="flex items-center gap-2">
        <h2
          class="text-xl font-bold text-base-content/80 uppercase tracking-tight"
        >
          {title}
        </h2>
        {
          count !== undefined && (
            <span class="text-sm font-mono text-base-content/40">{count}</span>
          )
        }
      </div>

      <!-- Header Right Actions Slot -->
      <div
        class="absolute right-4 top-1/2 -translate-y-1/2 z-50 flex items-center gap-2"
      >
        <slot name="header-right" />

        <!-- Shared Search Icon -->
        <button
          class="p-2.5 hover:bg-base-200 text-base-content/40 hover:text-base-content/70 rounded-xl transition-all duration-300"
          aria-label="Search"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="1.8"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
            ></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Main Content Slot -->
    <slot />
  </section>
</div>










