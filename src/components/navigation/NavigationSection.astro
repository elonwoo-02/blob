---
// NavigationSection.astro - Navigation buttons for Moment and Article views
---

<div class="navigation-section p-4">
  <h3 class="text-sm font-semibold mb-3 text-base-content/70">导航</h3>
  <div class="flex flex-col gap-2">
    <button
      data-view="moment"
      class="nav-button btn btn-ghost justify-start hover:bg-primary/10 transition-all"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
        />
      </svg>
      <span>Moment</span>
    </button>
    <button
      data-view="article"
      class="nav-button btn btn-ghost justify-start hover:bg-primary/10 transition-all"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
        />
      </svg>
      <span>Article</span>
    </button>
  </div>
</div>

<script>
  const navButtons = document.querySelectorAll('.nav-button');
  
  navButtons.forEach(button => {
    button.addEventListener('click', () => {
      const view = button.getAttribute('data-view');
      
      // Remove active state from all buttons
      navButtons.forEach(btn => btn.classList.remove('btn-active'));
      
      // Add active state to clicked button
      button.classList.add('btn-active');
      
      // Dispatch custom event with view type
      const event = new CustomEvent('view-changed', { detail: { view } });
      window.dispatchEvent(event);
    });
  });
</script>
