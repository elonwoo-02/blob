  <div class="flex gap-4 md:gap-8 lg:gap-12 xl:gap-16 mt-2 relative z-10">
    <!-- Left side: Avatar image -->
    <div class="relative w-full group">
      <img
        src="/hero-avatar.png"
        alt="Hero Avatar"
        class="w-auto object-contain transition-transform duration-700 ease-out group-hover:scale-105"
      />
      <!-- Text overlay on right half of image -->
      <div class="absolute top-1/2 left-1/2 transform -translate-y-1/2 translate-x-1/12 sm:translate-x-1/8 text-center px-0 sm:px-2 pr-8">
        <div class="space-y-2 sm:space-y-3 cursor-pointer group" onclick="window.location.href='/about'">
          <p class="vcr-font text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-bold text-gray-800 drop-shadow-2xl animate-fade-in-up group-hover:text-gray-700 transition-colors">
