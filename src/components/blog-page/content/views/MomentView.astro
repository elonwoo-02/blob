---
// ============================================
// MomentView.astro - Encapsulated WeChat Moments View
// ============================================
import MomentPublishModal from '../../modals/MomentPublishModal.astro';
import ContentView from '../ContentView.astro';
import { moments } from '../../../../data/moments.ts';
import PublishIcon from "../../../shared/icons/blog/PublishIcon.astro";
import MomentFeedIsland from "./MomentFeedIsland";

// 鍥剧墖缃戞牸鏍峰紡璁＄畻
const getImageGridClass = (count: number) => {
  if (count === 1) return 'moment-img-grid moment-img-1';
  if (count === 2) return 'moment-img-grid moment-img-2';
  if (count === 3) return 'moment-img-grid moment-img-3';
  if (count === 4) return 'moment-img-grid moment-img-4';
  if (count <= 6) return 'moment-img-grid moment-img-6';
  return 'moment-img-grid moment-img-9';
};
---

<!-- 鍙戝竷妯℃€佹锛屾棤瀹為檯鍔熻兘 -->
<MomentPublishModal />

<ContentView viewId="moment-view" title="MOMENT" count={moments.length} hidden={true}>
  <Fragment slot="header-right">
    <span id="publish-btn"><PublishIcon/></span>
  </Fragment>

  <!-- 涓汉灏侀潰鍖哄煙 -->
  <section class="moment-cover w-full">
    <!-- 灏侀潰鑳屾櫙 -->
    <div class="moment-cover-bg">
      <div class="moment-cover-overlay"></div>
    </div>
    <!-- 涓汉淇℃伅 -->
    <div class="moment-cover-profile">
      <span class="moment-cover-name">Elon Woo</span>
      <div class="moment-cover-avatar">EW</div>
    </div>
  </section>

  <!-- 鏈嬪弸鍦堝姩鎬佸垪琛?-->
  <section id="moment-list" class="moment-list w-full">
    {moments.map((post) => (
      <article class="moment-card" data-moment-id={post.id}>
        <!-- 澶村儚 -->
        <div class="moment-avatar" style={`background:${post.avatarBg}; color:${post.avatarColor};`}>
          {post.avatar}
        </div>

        <!-- 鍐呭鍖?-->
        <div class="moment-body">
          <!-- 鏄电О -->
          <h3 class="moment-name">{post.name}</h3>

          <!-- 姝ｆ枃 -->
          {post.text && <p class="moment-text">{post.text}</p>}

          <!-- 鍥剧墖缃戞牸 -->
          {post.images.length > 0 && (
            <div class={getImageGridClass(post.images.length)}>
              {post.images.map((img) => (
                <div class="moment-img-item">
                  {img.startsWith('#') ? (
                    <div class="moment-img-placeholder" style={`background:${img};`}></div>
                  ) : (
                    <img src={img} alt="moment image" loading="lazy" />
                  )}
                </div>
              ))}
            </div>
          )}

          <!-- 搴曢儴淇℃伅鏍忥細鏃堕棿 + 浣嶇疆 + 鎿嶄綔 -->
          <div class="moment-meta">
            <div class="moment-meta-left">
              <span class="moment-time">{post.time}</span>
              {post.location && (
                <span class="moment-location">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 0 1 15 0Z" />
                  </svg>
                  {post.location}
                </span>
              )}
            </div>
            <!-- 鎿嶄綔鎸夐挳 -->
            <button class="moment-action-trigger" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
              </svg>
            </button>
          </div>
          
          <!-- 鐐硅禐鍜岃瘎璁哄尯 -->
          {(post.likes.length > 0 || post.comments.length > 0) && (
            <div class="moment-social">
              <!-- 鐐硅禐 -->
              {post.likes.length > 0 && (
                <div class="moment-likes">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 shrink-0" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.653 16.915l-.005-.003-.019-.01a20.759 20.759 0 01-1.162-.682 22.045 22.045 0 01-2.765-2.067C4.057 12.626 2.5 10.68 2.5 8.312 2.5 5.946 4.318 4.5 6.25 4.5c1.206 0 2.346.592 3.25 1.608C10.404 5.092 11.544 4.5 12.75 4.5c1.932 0 3.75 1.446 3.75 3.812 0 2.368-1.557 4.314-3.202 5.841a22.045 22.045 0 01-3.927 2.749l-.019.01-.005.003L10 17.25l-.347-.335z" />
                  </svg>
                  <span>{post.likes.join(" · ")}</span>
                </div>
              )}

              <!-- 鍒嗛殧绾?-->
              {post.likes.length > 0 && post.comments.length > 0 && (
                <div class="moment-social-divider"></div>
              )}

              <!-- 璇勮 -->
              {post.comments.length > 0 && (
                <div class="moment-comments">
                  {post.comments.map((c) => (
                    <p class="moment-comment-item">
                      <span class="moment-comment-author">{c.name}</span>
                      {c.replyTo && (
                        <Fragment>
                          <span class="moment-comment-reply-arrow">鍥炲</span>
                          <span class="moment-comment-author">{c.replyTo}</span>
                        </Fragment>
                      )}
                      <span class="moment-comment-colon">:</span>
                      <span>{c.text}</span>
                    </p>
                  ))}
                </div>
              )}
            </div>
          )}
        </div>
      </article>
    ))}
  </section>

</ContentView>

<style>
  .moment-list {
    --wechat-blue: var(--app-accent);
    --wechat-text: var(--app-text);
    --wechat-gray: var(--app-text-muted);
    --wechat-divider: var(--app-border);
    --wechat-comment-bg: var(--app-surface-2);
    padding: 0;
  }


  .moment-cover {
    position: relative;
    height: 280px;
  }
  .moment-cover-bg {
    position: absolute;
    inset: 0;
  }
  .moment-cover-overlay {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 30% 20%, color-mix(in srgb, white 25%, transparent) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 80%, color-mix(in srgb, black 15%, transparent) 0%, transparent 50%);
  }

  .moment-cover-profile {
    position: absolute;
    bottom: 20px;
    right: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .moment-cover-name {
    font-size: 17px;
    font-weight: 600;
    color: var(--app-accent-contrast);
    text-shadow: 0 1px 6px color-mix(in srgb, black 35%, transparent);
  }
  .moment-cover-avatar {
    width: 64px;
    height: 64px;
    border-radius: 10px;
    background: var(--app-surface);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    font-weight: 700;
    color: var(--app-text-muted);
    border: 2px solid var(--app-accent-contrast);
    box-shadow: 0 2px 12px color-mix(in srgb, black 20%, transparent);
  }

  .moment-publish-btn {
    position: absolute;
    top: 16px;
    right: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: color-mix(in srgb, white 20%, transparent);
    backdrop-filter: blur(8px);
    border: 1px solid color-mix(in srgb, white 30%, transparent);
    color: var(--app-accent-contrast);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }
  .moment-publish-btn:hover {
    background: color-mix(in srgb, white 35%, transparent);
    transform: scale(1.05);
  }

  /* ============================================
     鍔ㄦ€佸崱鐗?
     ============================================ */
  .moment-card {
    display: flex;
    gap: 12px;
    padding: 20px;
    border-bottom: 0.5px solid var(--wechat-divider);
  }

  .moment-avatar {
    width: 42px;
    height: 42px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 700;
    flex-shrink: 0;
  }

  .moment-body {
    flex: 1;
    min-width: 0;
  }

  .moment-name {
    font-size: 15px;
    font-weight: 600;
    color: var(--wechat-blue);
    margin: 0 0 6px 0;
    line-height: 1;
  }

  .moment-text {
    font-size: 15px;
    line-height: 1.65;
    color: var(--wechat-text);
    margin: 0 0 8px 0;
    word-break: break-word;
  }

  /* ============================================
     鍥剧墖缃戞牸 - 寰俊鏈嬪弸鍦堝竷灞€瑙勫垯
     ============================================ */
  .moment-img-grid {
    display: grid;
    gap: 4px;
    margin-bottom: 8px;
  }
  .moment-img-item {
    aspect-ratio: 1;
    border-radius: 4px;
    overflow: hidden;
    background: var(--app-surface-2);
  }
  .moment-img-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .moment-img-placeholder {
    width: 100%;
    height: 100%;
  }

  /* 1寮犲浘锛氬ぇ鍥撅紝鏈€瀹?00px */
  .moment-img-1 {
    grid-template-columns: 1fr;
    max-width: 200px;
  }
  .moment-img-1 .moment-img-item { aspect-ratio: 4/3; }

  /* 2寮犲浘锛氭í鎺?*/
  .moment-img-2 {
    grid-template-columns: repeat(2, 1fr);
    max-width: 260px;
  }

  /* 3寮犲浘锛氭í鎺?*/
  .moment-img-3 {
    grid-template-columns: repeat(3, 1fr);
    max-width: 300px;
  }

  /* 4寮犲浘锛?脳2 */
  .moment-img-4 {
    grid-template-columns: repeat(2, 1fr);
    max-width: 260px;
  }

  /* 5-6寮犲浘锛?鍒?*/
  .moment-img-6 {
    grid-template-columns: repeat(3, 1fr);
    max-width: 300px;
  }

  /* 7-9寮犲浘锛?鍒?*/
  .moment-img-9 {
    grid-template-columns: repeat(3, 1fr);
    max-width: 300px;
  }

  /* ============================================
     搴曢儴淇℃伅鏍?
     ============================================ */
  .moment-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 6px;
  }
  .moment-meta-left {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .moment-time {
    font-size: 12px;
    color: var(--wechat-gray);
  }
  .moment-location {
    display: inline-flex;
    align-items: center;
    gap: 2px;
    font-size: 12px;
    color: var(--wechat-blue);
  }

  .moment-action-trigger {
    width: 30px;
    height: 22px;
    border-radius: 4px;
    background: var(--wechat-comment-bg);
    border: 0.5px solid var(--wechat-divider);
    color: var(--wechat-blue);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.15s;
  }
  .moment-action-trigger:hover {
    background: var(--app-border);
  }

  /* ============================================
     鐐硅禐鍜岃瘎璁哄尯
     ============================================ */
  .moment-social {
    background: var(--wechat-comment-bg);
    border-radius: 4px;
    overflow: hidden;
    position: relative;
  }
  /* 灏忎笁瑙掔澶?*/
  .moment-social::before {
    content: '';
    position: absolute;
    top: -6px;
    left: 12px;
    width: 10px;
    height: 10px;
    background: var(--wechat-comment-bg);
    transform: rotate(45deg);
  }

  .moment-likes {
    display: flex;
    align-items: flex-start;
    gap: 6px;
    padding: 7px 10px;
    font-size: 13px;
    color: var(--wechat-blue);
    line-height: 1.5;
  }
  .moment-likes svg {
    margin-top: 2px;
    color: var(--color-error);
  }

  .moment-social-divider {
    height: 0.5px;
    background: color-mix(in srgb, var(--app-border) 85%, transparent);
    margin: 0 8px;
  }

  .moment-comments {
    padding: 6px 10px;
  }
  .moment-comment-item {
    font-size: 13px;
    line-height: 1.55;
    color: var(--wechat-text);
    margin: 0;
    padding: 2px 0;
  }
  .moment-comment-author {
    color: var(--wechat-blue);
    font-weight: 500;
    cursor: pointer;
  }
  .moment-comment-reply-arrow {
    font-size: 12px;
    color: var(--wechat-gray);
    margin: 0 3px;
  }
  .moment-comment-colon {
    color: var(--wechat-text);
  }

  /* ============================================
     鍝嶅簲寮忚皟鏁?
     ============================================ */
  @media (max-width: 640px) {
    .moment-cover { height: 240px; }
    .moment-cover-avatar { width: 56px; height: 56px; font-size: 16px; }
    .moment-cover-name { font-size: 15px; }
    .moment-card { padding: 12px; gap: 10px; }
    .moment-avatar { width: 38px; height: 38px; font-size: 13px; }
    .moment-name { font-size: 14px; }
    .moment-text { font-size: 14px; }
  }
</style>

<MomentFeedIsland client:load />



