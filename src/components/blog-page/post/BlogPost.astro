---
interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props as Props;
---

<li class="rounded-lg border border-base-300 bg-base-100 px-3 py-2 hover:bg-base-200/60 transition-colors">
  <a class="block text-base-content/85 hover:text-base-content" href={url}>
    {title}
  </a>
</li>
