<div class="fab fab-flower">
  <!-- a focusable div with tabindex is necessary to work on all browsers. role="button" is necessary for accessibility -->
  <div tabindex="0" role="button" class="btn btn-lg btn-circle" style="background-color: var(--app-accent); border-color: var(--app-accent); color: var(--app-accent-contrast);">F</div>

  <!-- Main Action button replaces the original button when FAB is open -->
  <button class="fab-main-action btn btn-circle btn-lg"></button>

  <!-- buttons that show up when FAB is open -->
  <button class="btn btn-lg btn-circle">Exit</button>
  <button class="btn btn-lg btn-circle">Bot</button>
  <button class="btn btn-lg btn-circle">Top</button>
</div>
